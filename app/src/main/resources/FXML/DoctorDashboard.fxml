<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.DoctorController"
            prefWidth="1000" prefHeight="700" style="-fx-background-color: #70c1f0;">

    <top>
        <VBox alignment="CENTER">
            <Label text="Doctor Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="welcomeLabel" text="Welcome Doctor" style="-fx-font-size: 18px;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <GridPane hgap="20" vgap="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <!-- Patient Queue -->
            <Label text="Patient Queue" style="-fx-font-size: 18px; -fx-font-weight: bold;"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>

            <TableView fx:id="queueTable" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="5">
                <columns>
                    <TableColumn fx:id="patientNameColumn" text="Patient Name" prefWidth="200"/>
                    <TableColumn fx:id="dobColumn" text="DOB" prefWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>

            <Button text="Begin Consultation" fx:id="beginConsultationButton"
                    style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-background-radius: 20;"
                    GridPane.columnIndex="0" GridPane.rowIndex="6" onAction="#handleBeginConsultation"/>

            <!-- Consultation Section -->
            <Label text="Patient Details &amp; Medical History" style="-fx-font-size: 18px; -fx-font-weight: bold;"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label fx:id="patientDetailsLabel" text="[Select a patient to view details]"/>
                <TextArea fx:id="medicalHistoryArea" promptText="Enter medical history here..."
                          prefRowCount="10" wrapText="true"/>
                <Button text="Save History" fx:id="saveHistoryButton"
                        style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-background-radius: 20;"
                        onAction="#handleSaveHistory"/>
            </VBox>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="Logout" style="-fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 20;"
                    onAction="#handleLogout"/>
        </HBox>
    </bottom>
</BorderPane>
