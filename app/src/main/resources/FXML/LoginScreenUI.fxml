<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.LoginController"
            stylesheets="@../Styles/modern-theme.css">

    <center>
        <VBox spacing="0" alignment="CENTER" styleClass="container" maxWidth="400">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>
            
            <!-- Logo/Brand Section -->
            <VBox spacing="15" alignment="CENTER">
                <Label text="ðŸ¥" style="-fx-font-size: 48px; -fx-padding: 0 0 10 0;"/>
                <Label text="ADLIFE PLAZA" styleClass="title" alignment="CENTER"/>
                <Label text="Linking patients to world class doctors worldwide" 
                       styleClass="subtitle" alignment="CENTER" 
                       style="-fx-font-style: italic; -fx-text-fill: #667eea;"/>
            </VBox>
            
            <Separator styleClass="separator" style="-fx-padding: 30 0;"/>
            
            <!-- Login Form -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Sign In" styleClass="section-title" alignment="CENTER"/>
                
                <VBox spacing="15" alignment="CENTER">
                    <TextField fx:id="usernameField" 
                              promptText="Enter your username" 
                              styleClass="text-field"
                              maxWidth="300"/>
                    
                    <PasswordField fx:id="passwordField" 
                                  promptText="Enter your password" 
                                  styleClass="password-field"
                                  maxWidth="300"/>
                    
                    <Button text="Sign In" 
                            fx:id="loginButton"
                            onAction="#handleLogin"
                            styleClass="btn-primary"
                            maxWidth="300"/>
                </VBox>
                
                <!-- Status Label -->
                <Label fx:id="statusLabel" 
                       text="" 
                       styleClass="info-label" 
                       alignment="CENTER"
                       style="-fx-text-alignment: center; -fx-wrap-text: true;"/>
            </VBox>
            
            <!-- Footer -->
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Label text="Secure Medical Management System" 
                       styleClass="body-text" 
                       alignment="CENTER"
                       style="-fx-text-fill: #95a5a6;"/>
                <Label text="Â© 2024 ADLIFE PLAZA" 
                       styleClass="body-text" 
                       alignment="CENTER"
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
